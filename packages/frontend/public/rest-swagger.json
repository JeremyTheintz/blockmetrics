  "tags": [
    {
      "name": "Blockchains",
      "description": "Fetch all listed blockchains data. For the moment the listed blockchains are ethereum, binance-smart-chain, polygon, fantom, avalanche and bitcoin"
    },
    {
      "name": "Blockchain",
      "description": "Fetch single blockchain data"
    }
  ],
  "paths": {
    "/blockchains": {
      "get": {
        "tags": [
          "Blockchains"
        ],
        "summary": "search blockchains",
        "description": "Return an array blockchains objects.\n",
        "operationId": "searchBlockchains",
        "parameters": [
          {
            "name": "desc",
            "in": "query",
            "description": "Sort result",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "sortBy",
            "in": "query",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "enum": [
                "name node_count",
                "testnet_node_count",
                "single_node_power_consumption",
                "blockchain_power_consumption",
                "hashrate",
                "difficulty",
                "last_block_timestamp",
                "token_count",
                "transaction_count",
                "gas_price",
                "consensus",
                "today_transaction_count",
                "address_count",
                "today_address_count"
              ]
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "maximum number of records to return",
            "required": false,
            "style": "form",
            "explode": true,
            "schema": {
              "maximum": 50,
              "minimum": 1,
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Blockchain"
                  }
                }
              }
            }
          },
          "500": {
            "description": "The server can't successfuly execute the request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Error fetching blockchains data"
                }
              }
            }
          }
        }
      }
    },
    "/blockchains/total": {
      "get": {
        "tags": [
          "Blockchains"
        ],
        "summary": "search blockchains total",
        "description": "Return a sum of a property from blockchains objects.\n",
        "operationId": "searchBlockchainsTotal",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "description": "The property to sum",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "enum": [
                "powerConsumption",
                "tokenCount",
                "nodeCount",
                "transactionCount",
                "todayTransactionCount",
                "addressCount",
                "todayAddressCount"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "number",
                  "example": 100
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Missing parameter"
                }
              }
            }
          },
          "500": {
            "description": "The server can't successfuly execute the request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Error fetching blockchain chart data where type is ${type}"
                }
              }
            }
          }
        }
      }
    },
    "/blockchains/chart": {
      "get": {
        "tags": [
          "Blockchains"
        ],
        "summary": "blockchains monthly chart",
        "description": "Return monthly chart data for the blockchains\n",
        "operationId": "blockchainsMonthlyChart",
        "parameters": [
          {
            "name": "type",
            "in": "query",
            "description": "the property corresponding to the desired chart",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "string",
              "enum": [
                "activeUsers",
                "transactionsCount",
                "powerConsumption",
                "totalValueLocked"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ChartPoint"
                  }
                }
              }
            }
          },
          "400": {
            "description": "bad input parameter",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Missing parameter"
                }
              }
            }
          },
          "500": {
            "description": "The server can't successfuly execute the request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "example": "Error fetching blockchain chart data where type is ${type}"
                }
              }
            }
          }
        }
      }
    },
