  "components": {
    "schemas": {
      "Blockchain": {
        "required": [
          "address_count",
          "blockchain_power_consumption",
          "consensus",
          "difficulty",
          "gas_price",
          "hashrate",
          "id",
          "last_block_timestamp",
          "name",
          "node_count",
          "single_node_power_consumption",
          "testnet_node_count",
          "today_address_count",
          "today_transaction_count",
          "token_count",
          "total_value_locked",
          "transaction_count"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "example": "Ethereum"
          },
          "node_count": {
            "type": "integer",
            "example": 5000
          },
          "testnet_node_count": {
            "type": "integer",
            "example": 0
          },
          "single_node_power_consumption": {
            "type": "number",
            "example": 50
          },
          "blockchain_power_consumption": {
            "type": "number",
            "example": 100000
          },
          "hashrate": {
            "type": "number",
            "example": 169.145948
          },
          "difficulty": {
            "type": "number",
            "example": 1359284933
          },
          "last_block_timestamp": {
            "type": "number",
            "example": 1564984100
          },
          "token_count": {
            "type": "integer",
            "example": 4890
          },
          "transaction_count": {
            "type": "integer",
            "example": 178039483
          },
          "gas_price": {
            "type": "number",
            "example": 250000000
          },
          "consensus": {
            "type": "string",
            "example": "PoW"
          },
          "today_transaction_count": {
            "type": "integer",
            "example": 1928493
          },
          "address_count": {
            "type": "integer",
            "example": 192849345
          },
          "today_address_count": {
            "type": "integer",
            "example": 1928493
          },
          "total_value_locked": {
            "type": "integer",
            "example": 192849308903
          }
        }
      },
      "Metadata": {
        "required": [
          "blockchain_id",
          "description",
          "genesis_block",
          "id",
          "links",
          "source",
          "tagline"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "blockchain_id": {
            "type": "string",
            "format": "uuid"
          },
          "description": {
            "type": "string",
            "example": "Ethereum is a decentralized platform that runs on the Ethereum blockchain."
          },
          "tagline": {
            "type": "string",
            "example": "Decentralized, open source, community-driven platform for financial transactions."
          },
          "genesis_block": {
            "type": "number",
            "example": 10000000
          },
          "source": {
            "type": "string",
            "example": "https://ethereum.org/"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "https://ethereum.org/"
            }
          }
        }
      },
      "Score": {
        "required": [
          "power_consumption",
          "rank",
          "reliability",
          "score",
          "speed",
          "token_count",
          "total_value_locked"
        ],
        "type": "object",
        "properties": {
          "score": {
            "type": "number",
            "example": 46
          },
          "rank": {
            "type": "string",
            "example": "B-"
          },
          "reliability": {
            "type": "number",
            "example": 100
          },
          "token_count": {
            "type": "integer",
            "example": 100
          },
          "power_consumption": {
            "type": "number",
            "example": 21
          },
          "total_value_locked": {
            "type": "number",
            "example": 89
          },
          "speed": {
            "type": "number",
            "example": 43
          }
        }
      },
      "ChartPoint": {
        "required": [
          "date",
          "value"
        ],
        "type": "object",
        "properties": {
          "date": {
            "type": "number",
            "example": 1847394837
          },
          "value": {
            "type": "number",
            "example": 1888000000
          }
        }
      },
      "inline_response_200": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Blockchain"
          },
          {
            "$ref": "#/components/schemas/Metadata"
          }
        ]
      },
      "inline_response_200_1": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Metadata"
          },
          {
            "$ref": "#/components/schemas/Score"
          }
        ]
      }
    }
